# ==================================
# Azure Configuration
# ==================================
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=frauddetectionstorage;AccountKey=your_key;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER_NAME=models
AZURE_KEY_VAULT_URL=https://fraud-detection-kv.vault.azure.net/

# ==================================
# Database Configuration
# ==================================
DATABASE_URL=postgresql://postgres_admin:YourPassword123!@fraud-detection-postgres.postgres.database.azure.com:5432/fraud_db

# ==================================
# Redis Configuration
# ==================================
REDIS_URL=redis://:YourPassword@fraud-detection-redis.redis.cache.windows.net:6380
REDIS_SSL=true
REDIS_TTL=3600

# ==================================
# ML Model Configuration
# ==================================
MODEL_PATH=/app/models
MODEL_VERSION=v1.0.0
XGBOOST_MODEL_NAME=xgboost_fraud_model.pkl
NN_MODEL_NAME=nn_fraud_model.pth
ISOLATION_FOREST_MODEL_NAME=isolation_forest_model.pkl
SHAP_EXPLAINER_NAME=shap_explainer.pkl

# ==================================
# API Configuration
# ==================================
API_VERSION=1.0.0
API_TITLE=Fraud Detection API
API_DESCRIPTION=Real-time fraud detection API with ensemble models
API_HOST=0.0.0.0
API_PORT=8000
WORKERS=4
RELOAD=false

# ==================================
# Security Configuration
# ==================================
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
API_KEY_HEADER=X-API-Key

# ==================================
# Prediction Configuration
# ==================================
FRAUD_THRESHOLD=0.5
CONFIDENCE_THRESHOLD=0.7
MAX_REQUEST_SIZE=1048576
TIMEOUT_SECONDS=30

# ==================================
# Monitoring & Logging
# ==================================
LOG_LEVEL=INFO
LOG_FORMAT=json
METRICS_ENABLED=true
PROMETHEUS_PORT=9090
ENABLE_AUDIT_LOG=true

# ==================================
# Rate Limiting
# ==================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# ==================================
# CORS Configuration
# ==================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# ==================================
# Feature Flags
# ==================================
ENABLE_BATCH_PREDICTION=true
ENABLE_SHAP_EXPLANATION=true
ENABLE_MODEL_RELOAD=true
ENABLE_CACHE=true

# ==================================
# Environment
# ==================================
ENVIRONMENT=development
DEBUG=false
