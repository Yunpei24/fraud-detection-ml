# Airflow Configuration
AIRFLOW_UID=50000
_AIRFLOW_WWW_USER_USERNAME=airflow
_AIRFLOW_WWW_USER_PASSWORD=airflow

# Database URLs
FRAUD_DATABASE_URL=postgresql://postgres:postgres@postgres-fraud:5432/fraud_db
AIRFLOW_DATABASE_URL=postgresql+psycopg2://airflow:airflow@postgres-airflow:5432/airflow

# Service URLs
API_BASE_URL=http://fraud-api:8000
DATA_BASE_URL=http://fraud-data:8001
DRIFT_BASE_URL=http://fraud-drift:8002
MLFLOW_TRACKING_URI=http://mlflow:5000

# Databricks (optional - for distributed training)
DATABRICKS_HOST=https://your-databricks-workspace.cloud.databricks.com
DATABRICKS_TOKEN=your-databricks-token

# Azure (optional - for cloud storage)
AZURE_STORAGE_ACCOUNT=your-storage-account
AZURE_STORAGE_KEY=your-storage-key
AZURE_CONTAINER_NAME=fraud-detection

# Alert Configuration
ALERT_EMAIL_RECIPIENTS=ml-team@company.com,data-team@company.com

# Thresholds
DATA_DRIFT_THRESHOLD=0.3
CONCEPT_DRIFT_THRESHOLD=0.05
MIN_RECALL_THRESHOLD=0.80
MIN_PRECISION_THRESHOLD=0.75

# Training Config
TRAINING_COOLDOWN_HOURS=48
MIN_TRAINING_SAMPLES=10000
MLFLOW_MODEL_NAME=fraud-detection-model
