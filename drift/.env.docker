# ==============================================================================
# DRIFT MODULE - Docker Environment Variables
# ==============================================================================
# This file documents ALL environment variables used by the Drift container
# ==============================================================================

# ------------------------------------------------------------------------------
# DATABASE (PostgreSQL)
# ------------------------------------------------------------------------------
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=fraud_detection
POSTGRES_USER=fraud_user
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}

# ------------------------------------------------------------------------------
# CACHE (Redis)
# ------------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}

# ------------------------------------------------------------------------------
# MLFLOW
# ------------------------------------------------------------------------------
MLFLOW_TRACKING_URI=http://mlflow:5000
MODEL_NAME=fraud_detection_xgboost
MODEL_VERSION=latest

# ------------------------------------------------------------------------------
# MONITORING
# ------------------------------------------------------------------------------
PROMETHEUS_PORT=9092                      # Drift metrics port
LOG_LEVEL=INFO

# ------------------------------------------------------------------------------
# DRIFT DETECTION CONFIGURATION
# ------------------------------------------------------------------------------
DRIFT_THRESHOLD=0.05                      # Statistical significance threshold
DRIFT_CHECK_INTERVAL=3600                 # Check every hour (seconds)
REFERENCE_DATA_PATH=/data/reference.csv   # Baseline data for comparison
DRIFT_METHODS=ks,chi2,psi                 # KS test, Chi-square, PSI

# ------------------------------------------------------------------------------
# ALERTING (Optional)
# ------------------------------------------------------------------------------
ALERT_WEBHOOK_URL=                        # Slack/Teams webhook
ALERT_ON_DRIFT=true
ALERT_THRESHOLD=3                         # Alert after N consecutive drifts

# ------------------------------------------------------------------------------
# APPLICATION
# ------------------------------------------------------------------------------
ENVIRONMENT=development
